<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Upload Report</title>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <img src="<%= docOwner.profileImageURL %>" alt="Image" style="width: 125px; height: 100px;">
        <p><%= docOwner.name %></p>
    </div>
    
    <div class="container mt-3" >
        <form action="/documents/add/<%= docOwner.resourceId %>" method = "post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="profileImage" class="form-label">Report PDF</label>
                <input type="file" 
                required
                class="form-control" 
                id="Report" 
                name="Report" 
                aria-describedby="Report">
            </div>

            <div class="mb-3">
                <label for="name" class="form-label"></label>
                <input type="text"
                placeholder="date Of Report" 
                required
                class="form-control" 
                id="dateOfReport" 
                name="dateOfReport" 
                aria-describedby="dateOfReport">
            </div>


            <div class="mb-3">
                <button class="btn btn-primary">Submit</button>
             </div>

        </form>
    </div>
   
    <%- include('./partials/scripts') %>
</body>
</html>